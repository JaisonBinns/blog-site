---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personal blog" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Outfit:wght@200;300;400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav>
      <div class="nav-inner">
        <a href="/" class="nav-brand">Jaison</a>
        <div class="nav-right">
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/writing">Writing</a>
            <a href="/about">About</a>
          </div>
          <a
            href="https://jaisonbinns.substack.com"
            target="_blank"
            rel="noopener noreferrer"
            class="nav-subscribe"
          >
            Subscribe
          </a>
          <button class="theme-toggle" id="themeBtn" aria-label="Toggle theme">üåô</button>
        </div>
      </div>
    </nav>

    <div class="site-container">
      <main>
        <slot />
      </main>

      <footer>
        <div class="footer-inner">
          <p>&copy; {new Date().getFullYear()} Jaison</p>
          <div class="footer-links">
            <a href="https://twitter.com/binnsjaison">Twitter</a>
            <a href="https://github.com/JaisonBinns">GitHub</a>
            <a href="https://tiktok.com/@heyjaison">TikTok</a>
            <a href="https://instagram.com/heyjaison">Instagram</a>
          </div>
        </div>
      </footer>
    </div>

    <script is:inline>
      // Check saved preference or default to dark
      (function() {
        const saved = localStorage.getItem('theme');
        const theme = saved || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
        const btn = document.getElementById('themeBtn');
        if (btn) btn.textContent = theme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
      })();

      function toggleTheme() {
        const html = document.documentElement;
        const btn = document.getElementById('themeBtn');
        if (html.getAttribute('data-theme') === 'dark') {
          html.setAttribute('data-theme', 'light');
          btn.textContent = '‚òÄÔ∏è';
          localStorage.setItem('theme', 'light');
        } else {
          html.setAttribute('data-theme', 'dark');
          btn.textContent = 'üåô';
          localStorage.setItem('theme', 'dark');
        }
      }

      document.getElementById('themeBtn').addEventListener('click', toggleTheme);
    </script>
  </body>
</html>

<style is:global>
  :root {
    /* Hojicha & Matcha Palette */
    --cream: #D4BFA0;
    --warm-tan: #C4A882;
    --roast: #A8876A;
    --sage: #B5A87A;
    --deep-matcha: #2D5A27;
    --matcha-bright: #3B7A33;
    --matcha-dark: #1E4D2B;
    --matcha-rich: #2E6B34;

    --transition: 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* ‚ïê‚ïê‚ïê LIGHT THEME ‚ïê‚ïê‚ïê */
  [data-theme="light"] {
    --bg-primary: #F5EDE3;
    --bg-secondary: var(--cream);
    --bg-card: #FFFAF5;
    --bg-card-alt: var(--cream);
    --text-primary: var(--matcha-dark);
    --text-body: #3A3229;
    --text-muted: var(--roast);
    --accent: var(--deep-matcha);
    --accent-hover: var(--matcha-rich);
    --border: rgba(168, 135, 106, 0.3);
    --border-strong: var(--roast);
    --tag-bg: rgba(45, 90, 39, 0.08);
    --tag-text: var(--deep-matcha);
    --nav-bg: rgba(245, 237, 227, 0.85);
    --shadow: rgba(30, 77, 43, 0.08);
    --shadow-strong: rgba(30, 77, 43, 0.15);
    --code-bg: rgba(181, 168, 122, 0.15);
  }

  /* ‚ïê‚ïê‚ïê DARK THEME ‚ïê‚ïê‚ïê */
  [data-theme="dark"] {
    --bg-primary: #1A1612;
    --bg-secondary: #2A231C;
    --bg-card: #2A231C;
    --bg-card-alt: #332B22;
    --text-primary: var(--cream);
    --text-body: #C9B99A;
    --text-muted: var(--sage);
    --accent: var(--matcha-bright);
    --accent-hover: #4A9340;
    --border: rgba(212, 191, 160, 0.12);
    --border-strong: var(--roast);
    --tag-bg: rgba(59, 122, 51, 0.15);
    --tag-text: var(--matcha-bright);
    --nav-bg: rgba(26, 22, 18, 0.9);
    --shadow: rgba(0, 0, 0, 0.3);
    --shadow-strong: rgba(0, 0, 0, 0.5);
    --code-bg: rgba(181, 168, 122, 0.08);
  }

  * { margin: 0; padding: 0; box-sizing: border-box; }
  html { scroll-behavior: smooth; }

  body {
    font-family: 'Outfit', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--bg-primary);
    color: var(--text-body);
    transition: background var(--transition), color var(--transition);
    line-height: 1.7;
    font-weight: 300;
    overflow-x: hidden;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Instrument Serif', serif;
    font-weight: 400;
    letter-spacing: -0.01em;
    color: var(--text-primary);
    transition: color var(--transition);
  }

  /* ‚ïê‚ïê‚ïê NAV ‚ïê‚ïê‚ïê */
  nav {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
    background: var(--nav-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border);
    transition: background var(--transition), border var(--transition);
    padding: 0 2rem;
  }

  .nav-inner {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
  }

  .nav-brand {
    font-family: 'Instrument Serif', serif;
    font-size: 1.4rem;
    font-weight: 400;
    color: var(--text-primary);
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: color var(--transition);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 400;
    transition: color 0.3s;
  }

  .nav-links a:hover { color: var(--accent); }

  .nav-subscribe {
    font-size: 0.82rem;
    font-weight: 500;
    padding: 0.4rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    background: var(--accent);
    color: #fff;
    transition: all 0.3s;
  }

  .nav-subscribe:hover {
    background: var(--accent-hover);
  }

  .theme-toggle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid var(--border);
    background: transparent;
    cursor: pointer;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
  }

  .theme-toggle:hover {
    border-color: var(--accent);
  }

  /* ‚ïê‚ïê‚ïê SITE CONTAINER ‚ïê‚ïê‚ïê */
  .site-container {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 2rem;
    padding-top: 100px;
  }

  /* ‚ïê‚ïê‚ïê FOOTER ‚ïê‚ïê‚ïê */
  footer {
    margin-top: 6rem;
    padding: 2rem 0;
    border-top: 1px solid var(--border);
    transition: border var(--transition);
  }

  .footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  footer p {
    font-size: 0.82rem;
    color: var(--text-muted);
    transition: color var(--transition);
  }

  .footer-links {
    display: flex;
    gap: 1.25rem;
  }

  .footer-links a {
    font-size: 0.82rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-links a:hover {
    color: var(--accent);
  }

  /* ‚ïê‚ïê‚ïê MOBILE ‚ïê‚ïê‚ïê */
  @media (max-width: 640px) {
    nav { padding: 0 1.25rem; }
    .site-container { padding: 0 1.25rem; padding-top: 80px; }
    .nav-subscribe { display: none; }
    .nav-links { gap: 1rem; }
    .footer-inner { flex-direction: column; gap: 1rem; text-align: center; }
    .footer-links { gap: 1rem; }
  }
</style>
