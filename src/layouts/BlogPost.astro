---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  date: string;
  category: string;
  readTime?: string;
}

const { title, description, date, category, readTime = "5 min read" } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="prose max-w-none px-4 sm:px-0">
    <!-- Header -->
    <header class="mb-12 pb-8 max-w-3xl mx-auto" style="border-bottom: 1px solid var(--border);">
      <div class="flex items-center gap-4 text-sm mb-4" style="color: var(--text-muted);">
        <time>{date}</time>
        <span>•</span>
        <span>{readTime}</span>
        <span>•</span>
        <span class="px-2 py-0.5 rounded text-xs" style="background: var(--tag-bg); color: var(--tag-text);">
          {category}
        </span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight" style="color: var(--text-primary);">
        {title}
      </h1>

      <p class="text-xl leading-relaxed" style="color: var(--text-body);">
        {description}
      </p>
    </header>

    <!-- Content -->
    <div class="prose-lg max-w-3xl mx-auto">
      <slot />
    </div>

    <!-- Footer -->
    <footer class="mt-16 pt-8 max-w-3xl mx-auto" style="border-top: 1px solid var(--border);">
      <div class="flex items-center justify-between">
        <a
          href="/writing"
          class="font-medium transition-colors"
          style="color: var(--accent);"
        >
          ← Back to all posts
        </a>

        <div class="flex gap-4 text-sm" style="color: var(--text-muted);">
          <a href="https://twitter.com/share?url={Astro.url}" class="transition-colors" style="color: var(--text-muted);">
            Share on Twitter
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>
