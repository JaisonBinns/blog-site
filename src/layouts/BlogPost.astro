---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  date: string;
  category: string;
  readTime?: string;
}

const { title, description, date, category, readTime = "5 min read" } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="prose max-w-none px-4 sm:px-0">
    <!-- Header -->
    <header class="mb-12 pb-8 border-b border-gray-200 max-w-3xl mx-auto">
      <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
        <time>{date}</time>
        <span>•</span>
        <span>{readTime}</span>
        <span>•</span>
        <span class="px-2 py-0.5 bg-gray-100 text-gray-600 rounded text-xs">
          {category}
        </span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        {title}
      </h1>

      <p class="text-xl text-gray-600 leading-relaxed">
        {description}
      </p>
    </header>

    <!-- Content -->
    <div class="prose-lg max-w-3xl mx-auto">
      <slot />
    </div>

    <!-- Footer -->
    <footer class="mt-16 pt-8 border-t border-gray-200 max-w-3xl mx-auto">
      <div class="flex items-center justify-between">
        <a
          href="/writing"
          class="text-blue-600 hover:text-blue-800 font-medium"
        >
          ← Back to all posts
        </a>

        <div class="flex gap-4 text-sm text-gray-600">
          <a href="https://twitter.com/share?url={Astro.url}" class="hover:text-gray-900">
            Share on Twitter
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>
