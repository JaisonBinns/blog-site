---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  date: string;
  category: string;
  readTime?: string;
}

const { title, description, date, category, readTime = "5 min read" } = Astro.props;
---

<BaseLayout title={`${title} â€” Jaison`} description={description}>
  <article class="post">
    <header class="post-header">
      <div class="post-meta">
        <time>{date}</time>
        <span>&middot;</span>
        <span>{readTime}</span>
      </div>

      <h1>{title}</h1>

      <p class="post-desc">{description}</p>
    </header>

    <div class="post-body prose">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/writing">&larr; All writing</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    padding: 1rem 0 2rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.82rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .post-header h1 {
    margin-bottom: 0.75rem;
    line-height: 1.15;
  }

  .post-desc {
    font-size: 1.05rem;
    line-height: 1.65;
    color: var(--text-muted);
    max-width: 560px;
  }

  .post-body {
    max-width: none;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .post-footer a {
    font-size: 0.88rem;
    color: var(--accent);
    text-decoration: none;
    transition: color 0.3s;
  }

  .post-footer a:hover {
    color: var(--accent-hover);
  }
</style>
