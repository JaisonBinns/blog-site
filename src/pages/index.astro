---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

// In a real setup, this would fetch from your blog posts
const featuredPosts = [
  {
    title: "Getting Started with AI Assistants",
    excerpt: "How I built my own personal AI assistant that runs 24/7 and helps me stay organized.",
    date: "Feb 10, 2026",
    slug: "ai-assistant-setup",
    category: "Tech & AI"
  },
  {
    title: "Understanding Crypto Market Cycles",
    excerpt: "A deep dive into how crypto markets move and what indicators actually matter.",
    date: "Feb 8, 2026",
    slug: "crypto-cycles",
    category: "Crypto & Web3"
  },
  {
    title: "Building in Public: My Journey",
    excerpt: "Why I decided to share my learning process and build projects openly.",
    date: "Feb 5, 2026",
    slug: "building-in-public",
    category: "Personal"
  }
];
---

<BaseLayout title="Home - Jaison" description="Personal blog about tech, crypto, and building things">
  <div class="space-y-16">
    <!-- Hero Section -->
    <section class="pt-8 pb-12">
      <h1 class="text-5xl font-bold mb-6" style="color: var(--text-primary);">
        Hi, I'm <span style="color: var(--accent);">Jaison</span>
      </h1>
      <p class="text-xl leading-relaxed max-w-2xl" style="color: var(--text-body);">
        I write about technology, crypto, and building things that matter.
        Currently exploring AI, automation, and the future of work.
      </p>
    </section>

    <!-- Featured Posts -->
    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold" style="color: var(--text-primary);">Recent Writing</h2>
        <a href="/writing" class="transition-colors text-sm font-medium" style="color: var(--accent);">
          View all →
        </a>
      </div>

      <div class="space-y-8">
        {featuredPosts.map((post) => (
          <article class="group">
            <div class="flex items-start gap-4">
              <time class="text-sm mt-1 min-w-[100px]" style="color: var(--text-muted);">
                {post.date}
              </time>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-xl font-semibold transition-colors no-underline"
                    style="color: var(--text-primary);"
                  >
                    {post.title}
                  </a>
                  <span class="text-xs px-2 py-1 rounded" style="background: var(--tag-bg); color: var(--tag-text);">
                    {post.category}
                  </span>
                </div>
                <p class="leading-relaxed" style="color: var(--text-body);">
                  {post.excerpt}
                </p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- About Preview -->
    <section class="pt-8" style="border-top: 1px solid var(--border);">
      <h2 class="text-2xl font-semibold mb-4" style="color: var(--text-primary);">About</h2>
      <p class="leading-relaxed max-w-2xl mb-4" style="color: var(--text-body);">
        I'm a [your role/description]. I'm passionate about using technology to solve real problems
        and sharing what I learn along the way.
      </p>
      <a href="/about" class="transition-colors font-medium" style="color: var(--accent);">
        More about me →
      </a>
    </section>
  </div>
</BaseLayout>
