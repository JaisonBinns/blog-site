---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const posts = [
  {
    title: "Getting Started with AI Assistants",
    excerpt: "How I built my own personal AI assistant that runs 24/7 and helps me stay organized.",
    date: "Feb 10, 2026",
    slug: "ai-assistant-setup",
  },
  {
    title: "Building in Public: My Journey",
    excerpt: "Why I decided to share my learning process and build projects openly.",
    date: "Feb 5, 2026",
    slug: "building-in-public",
  },
];
---

<BaseLayout title="Jaison" description="Personal blog about tech, crypto, and building things">
  <section class="intro">
    <h1>I'm Jaison.</h1>
    <p class="intro-text">
      I write about the things I'm building and learning â€” mostly around AI, crypto,
      and figuring out how to make technology actually useful in day-to-day life.
      This is where I think out loud.
    </p>
  </section>

  <section class="recent">
    <h2>Recent</h2>
    <div class="post-list">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="post-item">
          <div class="post-meta">
            <time>{post.date}</time>
          </div>
          <div class="post-content">
            <h3>{post.title}</h3>
            <p>{post.excerpt}</p>
          </div>
        </a>
      ))}
    </div>
    <a href="/writing" class="see-all">All writing &rarr;</a>
  </section>
</BaseLayout>

<style>
  .intro {
    padding: 2rem 0 3rem;
  }

  .intro h1 {
    margin-bottom: 1rem;
  }

  .intro-text {
    font-size: 1.1rem;
    line-height: 1.75;
    max-width: 540px;
    color: var(--text-body);
  }

  .recent {
    padding: 2rem 0;
    border-top: 1px solid var(--border);
  }

  .recent h2 {
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-item {
    display: flex;
    gap: 1.5rem;
    padding: 1rem 0;
    text-decoration: none;
    border-bottom: 1px solid var(--border);
    transition: opacity 0.2s;
  }

  .post-item:hover {
    opacity: 0.75;
  }

  .post-meta {
    flex-shrink: 0;
    width: 100px;
  }

  .post-meta time {
    font-size: 0.82rem;
    color: var(--text-muted);
  }

  .post-content h3 {
    font-family: 'Instrument Serif', serif;
    font-size: 1.2rem;
    font-weight: 400;
    color: var(--text-primary);
    margin: 0 0 0.3rem;
    line-height: 1.3;
  }

  .post-content p {
    font-size: 0.92rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .see-all {
    display: inline-block;
    margin-top: 1.5rem;
    font-size: 0.88rem;
    color: var(--accent);
    text-decoration: none;
    transition: color 0.3s;
  }

  .see-all:hover {
    color: var(--accent-hover);
  }

  @media (max-width: 640px) {
    .post-item {
      flex-direction: column;
      gap: 0.25rem;
    }
    .post-meta {
      width: auto;
    }
  }
</style>
