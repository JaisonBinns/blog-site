---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

// In a real setup, this would fetch from your blog posts
const featuredPosts = [
  {
    title: "Getting Started with AI Assistants",
    excerpt: "How I built my own personal AI assistant that runs 24/7 and helps me stay organized.",
    date: "Feb 10, 2026",
    slug: "ai-assistant-setup",
    category: "Tech & AI"
  },
  {
    title: "Understanding Crypto Market Cycles",
    excerpt: "A deep dive into how crypto markets move and what indicators actually matter.",
    date: "Feb 8, 2026",
    slug: "crypto-cycles",
    category: "Crypto & Web3"
  },
  {
    title: "Building in Public: My Journey",
    excerpt: "Why I decided to share my learning process and build projects openly.",
    date: "Feb 5, 2026",
    slug: "building-in-public",
    category: "Personal"
  }
];
---

<BaseLayout title="Home - Your Name" description="Personal blog about tech, crypto, and building things">
  <div class="space-y-16">
    <!-- Hero Section -->
    <section class="pt-8 pb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-6">
        Hi, I'm <span class="text-blue-600">Your Name</span>
      </h1>
      <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
        I write about technology, crypto, and building things that matter.
        Currently exploring AI, automation, and the future of work.
      </p>
    </section>

    <!-- Featured Posts -->
    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-gray-900">Recent Writing</h2>
        <a href="/writing" class="text-blue-600 hover:text-blue-800 transition-colors text-sm font-medium">
          View all →
        </a>
      </div>

      <div class="space-y-8">
        {featuredPosts.map((post) => (
          <article class="group">
            <div class="flex items-start gap-4">
              <time class="text-sm text-gray-500 mt-1 min-w-[100px]">
                {post.date}
              </time>
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <a
                    href={`/blog/${post.slug}`}
                    class="text-xl font-semibold text-gray-900 hover:text-blue-600 transition-colors no-underline"
                  >
                    {post.title}
                  </a>
                  <span class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded">
                    {post.category}
                  </span>
                </div>
                <p class="text-gray-600 leading-relaxed">
                  {post.excerpt}
                </p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- About Preview -->
    <section class="pt-8 border-t border-gray-200">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">About</h2>
      <p class="text-gray-600 leading-relaxed max-w-2xl mb-4">
        I'm a [your role/description]. I'm passionate about using technology to solve real problems
        and sharing what I learn along the way.
      </p>
      <a href="/about" class="text-blue-600 hover:text-blue-800 transition-colors font-medium">
        More about me →
      </a>
    </section>
  </div>
</BaseLayout>
